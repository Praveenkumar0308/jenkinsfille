pipeline {
    agent any  // Runs on any available Jenkins agent/node

    stages {
        stage('Checkout Code') { // Step 1: Fetch code from Git
            steps {
                checkout scm  // Uses the Git repository configured in Jenkins
            }
        }

        stage('Copy to Target Folder') { // Step 2: Copy files to a specific folder
            steps {
                sh 'mkdir -p /opt/git-content'  // Ensure target directory exists
                sh 'cp -r * /opt/git-content/'  // Copy all repository files to target
            }
        }
    }
}
